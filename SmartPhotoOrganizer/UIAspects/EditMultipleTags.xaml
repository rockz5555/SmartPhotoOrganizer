<Window x:Class="SmartPhotoOrganizer.UIAspects.EditMultipleTags"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Multiple Tags" Height="182" Width="278" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Name="MainGrid">
        <TextBlock Height="21" Margin="12,12,17,0" Name="TitleText" VerticalAlignment="Top">Editing tags on X images.</TextBlock>
        <Label Height="28" HorizontalAlignment="Left" Margin="9,43,0,0" Name="Label1" VerticalAlignment="Top" Width="39">Tag:</Label>
        <Button Margin="0,74,137,0" Name="AddButton" Click="addButton_Click" Height="23" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77">Apply to All</Button>
        <Button Margin="0,74,17,0" Name="RemoveButton" Click="removeButton_Click" HorizontalAlignment="Right" Width="100" Height="23" VerticalAlignment="Top">Remove from All</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,17,11" Name="CloseButton" VerticalAlignment="Bottom" Width="75" IsCancel="True">Close</Button>
    </Grid>
</Window>
